{
  "name": "brat-video-gen",
  "version": "1.0.3",
  "description": "Brat style text animation video generator",
  "main": "src/gui/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir",
    "release": "node scripts/build.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@aptabase/electron": "^0.3.1",
    "@napi-rs/canvas": "^0.1.92",
    "dotenv": "^17.3.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.8.3",
    "express": "^5.2.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.brat.videogen",
    "productName": "Brat Video Generator",
    "publish": [
      {
        "provider": "github",
        "owner": "Sqott47",
        "repo": "brat",
        "releaseType": "release"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/fonts",
        "to": "fonts",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "node_modules/@napi-rs/canvas/**",
      "node_modules/ffmpeg-static/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Brat Video Generator"
    }
  }
}
